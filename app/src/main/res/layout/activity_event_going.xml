<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_weight="7">

        <LinearLayout
            android:id="@+id/event_going"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/event_going_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@android:drawable/ic_input_add"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <TextView
                android:id="@+id/event_going_title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="8dp" />
            <TextView
                android:id="@+id/event_going_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:minLines="1"
                android:lines="4"
                android:maxLines="8"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="@string/to"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>



            <TextView
                android:id="@+id/event_going_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:editable="false"
                android:paddingLeft="8dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="@string/place"/>

            <TextView
                android:id="@+id/event_going_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:editable="false"
                android:textSize="15sp"/>

            <Switch
                android:id="@+id/event_going_going"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/going"
                 android:textSize="15sp"
                 android:layout_marginLeft="@dimen/activity_horizontal_margin"
                 android:layout_marginTop="@dimen/activity_vertical_margin"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/event_going_save"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/save"
        android:layout_weight="1"/>



</LinearLayout>