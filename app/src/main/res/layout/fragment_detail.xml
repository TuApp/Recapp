<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unal.tuapp.recapp.DetailFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/card_detail_scroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                card_view:cardCornerRadius="4dp"
                android:minHeight="200dp">

                <RelativeLayout
                    android:id="@+id/card_detail_position"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp">


                    <TextView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="Algo"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/card_description"
                        android:layout_below="@id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="sdafkashfjkashfkjashfjaksfhlkasfhljkasfhaksfhjlkasfhjkashflajfkalkdfhaksfhaksfhjlaksfldsafsadffsadfasfasdf"/>
                    <!--flat button ?-->
                    <Button
                        android:id="@+id/card_share"
                        android:layout_below="@+id/card_description"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHARE"
                        android:layout_margin="8dp"
                        android:textColor="@color/my_accent"
                        style="?android:attr/borderlessButtonStyle"/>

                    <ImageButton
                        android:id="@+id/card_favorite"
                        android:layout_below="@+id/card_description"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorites"
                        android:layout_margin="8dp"
                        style="?android:attr/borderlessButtonStyle"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.design.widget.TextInputLayout  android:id="@+id/comment_text_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <EditText
                    android:id="@+id/comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:inputType="textMultiLine"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:maxLength="150"
                    android:hint="@string/my_comments"
                />
            </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="100dp">
                <RatingBar
                    android:id="@+id/comment_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="4"
                    android:stepSize="0.5"
                    android:rating="0.0"/>
                <Button
                    android:id="@+id/comment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="algo"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>




</android.support.design.widget.CoordinatorLayout>
