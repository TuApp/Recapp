<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unal.tuapp.recapp.DetailFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/card_detail_scroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="top"
                card_view:cardCornerRadius="4dp"
                android:minHeight="200dp">

                <RelativeLayout
                    android:id="@+id/card_detail_position"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp">

                    <ImageView
                        android:id="@+id/card_image"
                        android:layout_alignParentLeft="true"
                        android:layout_height="150dp"
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_calendar"/>

                    <TextView
                        android:id="@+id/card_title"
                        android:layout_below="@+id/card_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="Algo"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/card_description"
                        android:layout_below="@id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="sdafkashfjkashfkjashfjaksfhlkasfhljkasfhaksfhjlkasfhjkashflajfkalkdfhaksfhaksfhjlaksfldsafsadffsadfasfasdf"/>
                    <!--flat button ?-->
                    <Button
                        android:id="@+id/card_share"
                        android:layout_below="@+id/card_description"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHARE"
                        android:layout_margin="8dp"
                        android:textColor="@color/my_accent"
                        style="?android:attr/borderlessButtonStyle"/>

                    <ImageButton
                        android:id="@+id/card_favorite"
                        android:layout_below="@+id/card_description"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorites"
                        android:layout_margin="8dp"
                        style="?android:attr/borderlessButtonStyle"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hola"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hola"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hola"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hola"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hola"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hola"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/reminder"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:src="@android:drawable/ic_menu_edit"
        app:fabSize="normal"
        android:layout_gravity="bottom|right"
        app:layout_anchorGravity="bottom|right|end"/>



</android.support.design.widget.CoordinatorLayout>
