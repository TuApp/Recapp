<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_main_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin" >
            <RelativeLayout
                android:id="@+id/card_container_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/image_company"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>

                <TextView
                    android:id="@+id/name_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_below="@+id/image_company"/>

                <TextView
                    android:id="@+id/description_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_below="@+id/name_company"/>

                <TextView
                    android:id="@+id/address_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_below="@+id/description_company"/>

                <TextView
                    android:id="@+id/web_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:autoLink="web"
                    android:layout_below="@+id/address_company"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RatingBar
            android:id="@+id/rating_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_main_company"
            android:numStars="4"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
